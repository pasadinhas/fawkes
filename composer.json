{
    "name": "pasadinhas/fawkes",
    "description": "Social Network for Instituto Superior TÃ©cnico",
    "keywords": ["laravel", "IST", "social"],
    "license": "MIT",
    "require": {
        "laravel/framework": "4.2.*",
        "pasadinhas/laravel-oauth": "~0.0",
        "laracasts/commander": "~1.3",
        "laracasts/validation": "~1.2",
        "laracasts/flash": "~1.2",
        "laracasts/presenter": "~0.1"
    },
    "require-dev": {
        "way/generators": "~2.0",
        "phpspec/phpspec": "~2.0",
        "codeception/codeception": "~2.0",
        "laracasts/testdummy": "~1.0"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable"
}
